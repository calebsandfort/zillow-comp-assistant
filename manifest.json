{
    "manifest_version": 2,
    "name": "Zillow Comp Assistant",
    "description": "This extension lets you extract listing urls from Zillow",
    "version": "1.0",
    "browser_action": {
        "default_icon": "logo.png",
        "default_popup": "popup.html",
        "default_title": "Zillow Comp Assistant"
    },
    "content_scripts": [{
        "matches": ["*://*.zillow.com/*"],
        "all_frames": false,
        "js":      [
            "scripts/jquery.min.js",
            "scripts/content.js"
        ]
    }],
    "permissions": [
        "activeTab", "tabs"
    ],
    "content_security_policy": "script-src 'self' https://www.gstatic.com/; object-src 'self'"
}

